#search.container
    .row
        .col-xs-12.col-sm-5.col-md-7.col-lg-7
            input#search-text(type='text', autofocus='')
        .col-xs-12.col-sm-3.col-md-2.col-lg-2
            .btn-group
                button#google.btn(type='button') Google
                button.btn.dropdown-toggle(data-toggle='dropdown', type='button')
                    span.caret
                ul.dropdown-menu
                    li#google_img
                        a(href='#') Img
                    li#google_video
                        a(href='#') Video
                    li#google_map
                        a(href='#') Map
                    li#google_news
                        a(href='#') News
                    li#google_books
                        a(href='#') Books
        .col-xs-12.col-sm-3.col-md-2.col-lg-2
            .btn-group
                button#yandex.btn(type='button') Yandex
                button.btn.dropdown-toggle(data-toggle='dropdown', type='button')
                    span.caret
                ul.dropdown-menu
                    li#yandex_img
                        a(href='#') Img
                    li#yandex_video
                        a(href='#') Video
                    li#yandex_map
                        a(href='#') Map
                    li#yandex_news
                        a(href='#') News
                    li#yandex_market
                        a(href='#') Market
        .col-xs-12.col-sm-1.col-md-1.col-lg-1
            button#btn_deep_search_block.btn(type='button', data-toggle='collapse', data-target='#deep_search_block', aria-expanded='false', aria-controls='collapseExample')
                i.fa.fa-plus(aria-hidden='true')
    br
#deep_search_block.container.collapse
    #deep-search
        .row
            .col-xs-3.col-sm-3.col-md-3.col-lg-3
                select#deep-search_rule
                    option(value='0') -
                    option(value='1') +
                    option(value='2') ~
                    option(value='3') &
                    option(value='4') ""
                    option(value='5') site:
                    option(value='6') -site:
                    option(value='7') related:
                    option(value='8') intitle:
                    option(value='9') filetype:
                    option(value='10') translate
                    option(value='11') define:
            .col-xs-4.col-sm-4.col-md-4.col-lg-4
                input#deep-search_text(type='text')
            .col-xs-12.col-sm-3.col-md-2.col-lg-2
                input#deep-search_add(type='button', value='Add')